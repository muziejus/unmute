<article class="
  md:grid md:grid-cols-4
  md:gap-3 md:gap-6
  text-un{{@artist.team.color}}
  pb-10">
  <aside>
    <div class="block md:hidden pb-2">
      <img src={{@artist.imgUrl}}
           alt="{{@artist.displayName}} {{if @artist.photoCredit (concat "by " @artist.photoCredit)}}" />
      {{#if @artist.photoCredit}}
        <p class="text-2xs font-normal  md:text-sm text-right">
          {{@artist.photoCredit}}
        </p>
      {{/if}}
    </div>

    <div class="flex flex-row space-x-4 md:space-x-0 md:flex-col w-full pb-6 md:pb-0">
      <LinkTo @route="team.team" @model={{@artist.team.id}}
        class="flex-grow-1 w-1/3 md:w-full">
        {{svg-jar (concat @artist.team.id "-logo") class="w-full fill-current"}}
        <h3 class="hidden md:block pt-4 pb-1 md:pb-4
                   text-base md:text-3xl uppercase font-semibold tracking-wide">
          {{@artist.team.name}}
        </h3>
      </LinkTo>

      <div class="flex-grow-1 w-2/3 md:w-full block md:hidden">
        <h3 class="pb-1 md:pb-0 font-semibold md:font-normal uppercase text-xs md:text-xl">{{@artist.team.name}}</h3>
        <p class="pb-1 md:pb-0 underline font-semibold md:font-normal text-xs md:text-xl">
            {{@artist.displayName}}
        </p>
        <p class="font-semibold md:font-normal text-2xs md:text-base">
          {{@artist.pronouns}}
        </p>

        <div class="pt-2 flex flex-col space-y-2 md:space-y-0">
          <ArtistLinks @artist={{@artist}} />

          <SwallowtailFlag @color={{@artist.team.color}}>
            {{@artist.country}}
          </SwallowtailFlag>
        </div>
      </div>
      <div class="hidden md:block flex-grow-1 w-1/3 md:w-full">
        <p class="pb-1 md:pb-0 font-semibold md:font-normal uppercase text-xs md:text-xl">teammate</p>
        <p class="pb-1 md:pb-0 underline font-semibold md:font-normal text-xs md:text-xl">
          <LinkTo @route="artists.artist" 
            @model={{this.teammate.id}}
            class="underline">
            {{this.teammate.displayName}}
          </LinkTo>
        </p>
        <p class="font-semibold md:font-normal text-2xs md:text-base">
          {{this.teammate.pronouns}}
        </p>

        <div class="flex flex-row pt-2 md:flex-col">
          <ArtistLinks @artist={{this.teammate}} />

          <SwallowtailFlag @color={{@artist.team.color}}>
            {{this.teammate.country}}
          </SwallowtailFlag>
        </div>
      </div>
    </div>
  </aside>
  <div class="md:pl-20 md:pr-6 md:col-span-2">

    <h2 class="block md:hidden pb-1 md:pb-0 underline font-semibold md:font-normal text-xs md:text-xl">
        {{@artist.displayName}}
    </h2>
    <div class="hidden md:flex flex-row justify-between items-center">
      <h2 class="pb-1 md:pb-2
                 underline text-base md:text-3xl font-normal tracking-wide">
        {{@artist.displayName}}
      </h2>
    </div>
    <div class="w-full hidden md:block pb-12">
      <p class="pb-1 md:pb-2 font-normal text-2xs md:text-base">
        {{@artist.pronouns}}
      </p>
      <ArtistLinks @artist={{@artist}} />
      <SwallowtailFlag @color={{@artist.team.color}}>
        {{@artist.country}}
      </SwallowtailFlag>
    </div>
      <TextBox @markdownPath={{concat "bios/" @artist.id}} />
  </div>
  <div class="hidden md:block">
    <img src={{@artist.imgUrl}}
         alt="{{@artist.displayName}} {{if @artist.photoCredit (concat "by " @artist.photoCredit)}}" />
    {{#if @artist.photoCredit}}
      <p class="text-2xs md:text-sm text-right">
        {{@artist.photoCredit}}
      </p>
    {{/if}}
  </div>
</article>
