<aside class="w-full flex flex-row justify-between mb-6 space-x-6">
  <div class="noise-background w-10/12 unveiling-banner flex-grow-1 
    bg-black text-white
    flex flex-col justify-center items-center
    p-2 pt-0
    ">
    {{#if this.isShowing}}
    <div class="w-full flex flex-col">
      <div role="button" class="w-full text-ungreen"
           {{on "click" this.toggleVideo}}
           >
           {{svg-jar "unveiling-banner-collapsed" class="fill-current"}}
      </div>
      <div class="h-full w-full unveiling-banner-video-wrapper">
        <iframe 
          class="unveiling-banner-iframe"
          title="vimeo-player" 
          src="https://player.vimeo.com/video/11387248" 
          allow="autoplay; fullscreen; picture-in-picture"
          frameborder="0" allowfullscreen></iframe>
        <script src="https://player.vimeo.com/api/player.js"></script>
      </div>
    </div>
    {{else}}
    <div role="button"
      class="w-full"
      {{on "click" this.toggleVideo}}
      {{did-insert this.makeWaves}}
         >
    {{svg-jar "unveiling-banner"}}
    </div>
    {{/if}}
  </div>
  <div class="w-2/12 flex-grow-0 flex flex-col">
    <div class="noise-background w-full flex justify-center items-center "
                   >
      <a href="http://undercurrent.nyc" class={{if this.isShowing "text-unbrown" "text-unpurple"}}>
        {{svg-jar "unveiling-banner-facebook-button" class="h-full w-full fill-current"}}
      </a>
    </div>
    {{#if this.isShowing}}
    <div class="w-full h-full flex-grow-1 flex flex-col justify-end text-unpurple space-y-4">
      <h3 class="text-xl font-bold">UN/MUTE</h3>
      <p>Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. Text. </p>
    </div>
    {{/if}}
  </div>
</aside>
