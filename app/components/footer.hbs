<footer class="relative w-screen"> 
  <div class="bg-white p-6 xl:px-10 grid grid-cols-4 grid-rows-4 w-full gap-6 z-20" >
  {{#each this.logos as |logo|}}
  <div 
    class="px-6 flex justify-center items-center text-xl {{logo.extraClass}}">
    <a target="_blank" 
      rel="noreferrer noopener" 
      href="{{logo.website}}"
      class="block w-full h-full flex justify-center items-center">
      {{svg-jar (concat logo.name "-logo")
        class=(if
          (eq logo.name "austria")
          "w-1/6"
          "w-4/5"
          )}}
    </a>
  </div>
  {{/each}}
  </div>
</footer>

