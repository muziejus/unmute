{{#let (if @clip.team @clip.team.color "purple") as |color|}}
  <article class="
    pb-16
    flex flex-col md:flex-row-reverse
    text-un{{color}}
    "
    >
    <div class="w-full md:w-3/4">
      <div class="clip-play-box">
        <iframe 
          title="Clip {{@clip.id}}"
          class="absolute top-0 left-0 w-full h-full"
          src="https://www.youtube-nocookie.com/embed/{{@clip.id}}?modestbranding=1&rel=0" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen></iframe>
      </div>
    </div>
    <div class="flex md:flex-col md:pr-6 w-full md:w-1/4">
      <div>
        <h2 class="pb-4
          text-3xl uppercase font-semibold tracking-wide">{{if @clip.team @clip.team.name "lottery"}}</h2>

        {{#if @clip.team}}
          <div class="pb-4">
            {{#each @clip.team.artists as |artist|}}
              <h3 class="font-normal text-xl">{{artist.displayName}}</h3>
            {{/each}}
          </div>
          {{#each @clip.team.artists as |artist|}}
            <SwallowtailFlag @color={{color}}>
              {{artist.country}}
            </SwallowtailFlag>
          {{/each}}
        {{/if}}
      </div>
      <div class="md: pt-10">
        <p>
          /{{@description}}
        </p>
      </div>
    </div>
  </article>
{{/let}}

