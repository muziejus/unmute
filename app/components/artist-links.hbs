<div class="flex flex-row space-x-1 pr-2 md:pr-0 md:space-x-4 relative md:pt-4 md:pb-4">
  {{#if @artist.url}}
  <a role="button" href={{@artist.url}} class="hover:text-alt{{@artist.team.color}}">
      {{svg-jar "globe" class="fill-current h-3 md:h-7"}}
    </a>
  {{/if}}
  {{#if @artist.instagram}}
  <a role="button" href="http://instagram.com/{{@artist.instagram}}" class="hover:text-alt{{@artist.team.color}}">
    {{svg-jar "instagram" class="fill-current h-3 md:h-7"}}
  </a>
  {{/if}}
  {{#if @artist.facebook}}
  <a role="button" href={{@artist.facebook}} class="hover:text-alt{{@artist.team.color}}">
    {{svg-jar "facebook-official" class="fill-current h-3 md:h-7"}}
  </a>
  {{/if}}
</div>
  



