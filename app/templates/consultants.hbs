<Container @sticky={{true}}>
  <LinkTo @route="consultants" class="text-right nav-consultants block md:hidden text-sm font-semibold pb-4">/consultants</LinkTo>
  <StickySidebar @color="purple">
      <div class="
        md:hidden
        w-full flex flex-row space-x-4 items-end"
        >
        <div class="w-1/3 md:w-full">
          {{svg-jar "arrow-logo" class="fill-current w-full"}}
        </div>
        <div class="block md:hidden w-2/3">
          <h2 class="text-xl font-medium">Consultants</h2>
        </div>
      </div>
      <StickySidebar::Aside>
        <div class="sidebar__inner">
          {{svg-jar "arrow-logo" class="fill-current w-full"}}
        </div>
      </StickySidebar::Aside>
      <StickySidebar::Article>
        {{#each (shuffle @model) as |consultant|}}
          <ConsultantContainer @consultant={{consultant}} />
        {{/each}}
      </StickySidebar::Article>
    </StickySidebar>
  <BottomBorder @color="purple" />
</Container>
